{
  "name": "astro-svgs",
  "version": "1.2.1",
  "description": "A compact solution for SVG sprites in Astro projects. It automates symbol ID management, supports hot reloading, and generates optimized SVG sprites with minimal setupâ€”ideal for seamless SVG icon integration.",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./Icon.astro": {
      "import": "./components/index.ts"
    }
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.mjs",
    "components"
  ],
  "scripts": {
    "fmt": "prettier --write .",
    "build": "unbuild",
    "dev": "unbuild --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "astro-component",
    "sprite",
    "svg",
    "svgs",
    "icon",
    "icons",
    "generae",
    "unique",
    "symbols",
    "defs",
    "optimization",
    "svgo",
    "svgmin",
    "dynamic-svg",
    "intelligent-prompting"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ACP-CODE/astro-svgs.git"
  },
  "author": "Junlin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ACP-CODE/astro-svgs/issues"
  },
  "homepage": "https://github.com/ACP-CODE/astro-svgs#readme",
  "devDependencies": {
    "astro": "^4.16.10",
    "prettier": "^3.4.1",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "astro": "^4.14.0 || ^5.0.0"
  }
}
